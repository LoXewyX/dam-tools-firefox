{
  "manifest_version": 3,
  "name": "DAM Tool",
  "version": "1.0.2",
  "description": "Description of your extension",
  "permissions": ["storage", "scripting", "activeTab"],
  "browser_specific_settings": {
    "gecko": {
      "id": "luis.ruiz@insbaixcamp.cat"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./popup.js"]
    }
  ],
  "action": {
    "default_popup": "./index.html",
    "default_icon": {
      "48": "./img/icon-48.png"
    },
    "default_title": "Dam Tool"
  }
}
